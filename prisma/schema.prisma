// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Events {
  id          Int       @id @default(autoincrement())
  name        String
  type        String
  address     String
  website     String
  starts_at   DateTime
  ends_at     DateTime?
  phone       String
  email       String
  description String?   @db.Text
  approved    Boolean   @default(true)
  userId      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Contacts {
  id          Int     @id @default(autoincrement())
  name        String
  pronouns    String?
  category    String
  address     String
  website     String
  email       String
  phone       String
  twitter     String?
  instagram   String?
  description String? @db.Text
  approved    Boolean @default(true)

  profile Boolean @default(false)
  display Boolean @default(true)

  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchases {
  id Int @id @default(autoincrement())

  purchasePrice  Decimal
  stripeIntentId String
  expiryDate     DateTime
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Resource{
  id Int @id @default(autoincrement())

  name String
  category String?
  description String?
  link String
  userId String 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}